mixin tabNav(id, titles)
    ul.tab__nav(role="tablist")
        each title, index in titles
            li.tab__item(data-aos="fade-up" data-aos-delay=index * 50 + 200)
                button.tab__menu(type="button" id=`tab-${id}-${index + 1}` role="tab" aria-controls=`tab-panel-${id}-${index + 1}` aria-selected=!index ? "true" : "false" data-api="tab")!= title
mixin tabPanel(id, index)
    div(id=`tab-panel-${id}-${index}` class="tab__panel" role="tabpanel" aria-labelledby=`tab--${id}-${index}`)
        block
